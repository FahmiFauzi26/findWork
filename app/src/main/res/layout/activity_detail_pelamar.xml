<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perusahaan.DetailPelamarActivity"
    android:background="@drawable/ic_splash_screen"
    android:padding="20dp"
    android:id="@+id/bottomSheetTertarik">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-10dp"
        android:background="@drawable/ic_back" />

    <TextView
        android:id="@+id/percakapanTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_back"
        android:padding="10dp"
        android:text="Detail Pelamar"
        android:textColor="#1A73E9" />

    <Button
        android:id="@+id/buttonSuratLamaran"
        android:layout_below="@id/percakapanTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_button_dokumen"
        android:text="Lihat Surat Lamaran" />

    <Button
        android:id="@+id/buttonCV"
        android:layout_below="@id/buttonSuratLamaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/ic_button_dokumen"
        android:text="Lihat CV" />

    <Button
        android:id="@+id/buttonPortofolio"
        android:layout_below="@id/buttonCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_button_dokumen"
        android:text="Lihat Portofolio" />

    <Button
        android:id="@+id/buttonTertarik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonPortofolio"
        android:layout_marginVertical="10dp"
        android:background="@drawable/ic_button_tertarik"
        android:text="Tertarik"
        android:textColor="#FFFFFF" />


</RelativeLayout>