<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pencarikerja.FragmentTertarik">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/posisiLowonganView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desainer Grafis"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/namaPerusahaanView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PT Aksepta Strategi Indonesia"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_carbon_location"/>

                <TextView
                    android:id="@+id/alamatLowonganView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Magelang, Jawa Tengah"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="3dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cil_school"/>

                <TextView
                    android:id="@+id/minimalPendidikanView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Minimal pendidikan SMA/SMK Sederakat"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="3dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cil_money"/>

                <TextView
                    android:id="@+id/gajiView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Gaji : 4.000.000 - 5.000.000"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_healthicons_i_schedule_school_date_time_outline"/>

                <TextView
                    android:id="@+id/tenggatLowonganView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Tenggat 04 Mei 2022"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lowongan_line"
                android:layout_marginVertical="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textStyle="bold"
                android:text="Status : Menunggu"
                android:textColor="@color/black"
                android:layout_marginRight="100dp"/>
                <Button
                    android:id="@+id/btn_lihat"
                    style="@style/MaterialAlertDialog.Material3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="35dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_button_lihat"
                    android:text="Lihat"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/btn_percakapan"
                    style="@style/MaterialAlertDialog.Material3"
                    android:layout_width="75dp"
                    android:layout_height="35dp"

                    android:layout_marginRight="20dp"
                    android:minHeight="35dp"
                    android:background="@drawable/ic_button_lihat"
                    android:text="Percakapan"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>