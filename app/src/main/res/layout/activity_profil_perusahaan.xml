<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perusahaan.ProfilPerusahaanActivity"
    android:background="@drawable/ic_splash_screen"
    android:padding="20dp">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-10dp"
        android:background="@drawable/ic_back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_back"
        android:padding="10dp"
        android:text="Profil"
        android:textColor="#1A73E9" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_below="@id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/aksepta"
            app:civ_border_color="@color/biru_findwork"
            app:civ_border_width="1dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/profilePicture"
            app:layout_constraintEnd_toEndOf="@id/profilePicture"
            app:srcCompat="@drawable/ic_baseline_photo_camera_24"
            app:fabSize="mini"
            tools:ignore="VectorDrawableCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/formBuatLowongan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/constraintLayout"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/namaPerusahaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Perusahaan" />

                <EditText
                    android:id="@+id/editTextNamaPerusahaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/namaPerusahaan"
                    android:background="@drawable/ic_edit_text"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp" />

                <TextView
                    android:id="@+id/tentangPerusahaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextNamaPerusahaan"
                    android:layout_marginTop="10dp"
                    android:text="Tentang Perusahaan" />

                <EditText
                    android:id="@+id/editTextTentangPerusahaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tentangPerusahaan"
                    android:background="@drawable/ic_edit_text"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp" />

                <TextView
                    android:id="@+id/emailPerusahaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextTentangPerusahaan"
                    android:layout_marginTop="10dp"
                    android:text="Email Perusahaan" />

                <EditText
                    android:id="@+id/editTextEmailPerusahaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailPerusahaan"
                    android:background="@drawable/ic_edit_text"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp" />

                <TextView
                    android:id="@+id/noTelpon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextEmailPerusahaan"
                    android:layout_marginTop="10dp"
                    android:text="No.Telpon" />

                <EditText
                    android:id="@+id/editTextNoTelpon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/noTelpon"
                    android:background="@drawable/ic_edit_text"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_below="@id/editTextNoTelpon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_buat"
                    android:text="Simpan"
                    style="@style/MaterialAlertDialog.Material3"
                    android:textColor="@color/white"
                    android:layout_marginVertical="20dp"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>