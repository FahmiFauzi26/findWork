<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pencarikerja.DokumenPencariKerja"
    android:background="@drawable/ic_splash_screen"
    android:padding="20dp">



    <Button
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-10dp"
        android:background="@drawable/ic_back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_back"
        android:padding="10dp"
        android:text="Dokumen"
        android:textColor="#1A73E9" />

    <Button
        android:id="@+id/btn_buatlowongan"
        style="@style/MaterialAlertDialog.Material3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_buat_lowongan"
        android:text="Buat Profile Dokumen +"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/daf_profil"
        android:layout_width="98dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="144dp"
        android:text="Daftar Profile"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/daf_profil">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/posisiLowonganView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile 1"
                android:textColor="#000000"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tenggatLowonganView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dokumen Desainer"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lowongan_line"
                android:layout_marginVertical="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/btn_lihat"
                    style="@style/MaterialAlertDialog.Material3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="35dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_button_lihat"
                    android:text="Lihat"
                    android:textColor="@color/white"
                    android:textSize="12sp" />



                <Button
                    android:id="@+id/buttonHapus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="35dp"
                    android:background="@drawable/ic_button_hapus"
                    style="@style/MaterialAlertDialog.Material3"
                    android:layout_marginRight="10dp"
                    android:text="Hapus"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>